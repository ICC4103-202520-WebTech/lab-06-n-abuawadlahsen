<%= form_with(model: recipe, local: true, class: "needs-validation") do |form| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>
      <ul>
        <% recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter recipe title" %>
  </div>

  <div class="mb-3">
    <%= form.label :cook_time, "Cook Time (minutes)", class: "form-label" %>
    <%= form.number_field :cook_time, class: "form-control", placeholder: "e.g., 30", min: 1 %>
  </div>

  <div class="mb-3">
    <%= form.label :difficulty, class: "form-label" %>
    <%= form.select :difficulty, ['Easy', 'Medium', 'Hard'], { include_blank: "Select difficulty" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :instructions, class: "form-label" %>
    <%= form.rich_text_area :instructions, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", recipes_path, class: "btn btn-secondary" %>
  </div>
<% end %>
