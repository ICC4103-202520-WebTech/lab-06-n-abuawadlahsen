<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1 class="mb-0"><%= @recipe.title %></h1>
      <div>
        <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-warning" %>
        <%= link_to "Back", recipes_path, class: "btn btn-secondary" %>
      </div>
    </div>
    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-6">
          <h5>Cook Time</h5>
          <p class="fs-4"><%= @recipe.cook_time %> minutes</p>
        </div>
        <div class="col-md-6">
          <h5>Difficulty</h5>
          <p>
            <span class="badge fs-5 <%= @recipe.difficulty == 'Easy' ? 'bg-success' : @recipe.difficulty == 'Medium' ? 'bg-warning' : 'bg-danger' %>">
              <%= @recipe.difficulty %>
            </span>
          </p>
        </div>
      </div>

      <hr>

      <div class="mt-4">
        <h5>Instructions</h5>
        <div class="trix-content">
          <%= @recipe.instructions %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= button_to "Delete Recipe", @recipe, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
